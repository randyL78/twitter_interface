- var avatar = "images/f-spore.png"
if following.avatar
  - avatar = avatar.following

li
  .circle--fluid
    .circle--fluid--cell.circle--fluid--primary
      a.app--tweet--author
        .app--avatar(style=`background-image: url(${avatar})`)
          img(src=`${avatar}`, alt=`${following.name}`)
        h4 #{following.name}
        p #{following.username}
    .circle--fluid--cell
      if following.followed
        a.button.button-text Unfollow
      else
        a.button Follow

